@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastre-se";
}

<div style="display:flex; flex-direction:column; margin-left: 440px">
    <div class="row">
        <div class="col-md-6 my-5 text-center" style="background-color:#D9D9D9; border:solid; border-color:#E9741F; height: 450px">
            <h1 class="my-2">@ViewData["Title"]</h1>
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3" style="border:solid; border-color:#E9741F">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="email" />
                        <label asp-for="Input.Email" class="form-label">E-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3" style="border:solid; border-color:#E9741F">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Senha</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3" style="border:solid; border-color:#E9741F">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div style="display:flex; flex-direction:row; justify-content:space-between; margin-top: 50px">
                        <button class="btn btn-lg btn-light" style="border:solid; border-color:#E9741F; width: 35%"><a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none text-black">Voltar</a></button>
                        <button id="login-submit" type="submit" class="btn btn-lg btn-light" style="border:solid; border-color:#E9741F; width: 35%">Entrar</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
