@model IEnumerable<Somativa.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1 style="text-align: center; margin-top: 10px">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-light text-black" style="background-color: white; border: solid; border-color: #E9741F;">Adicionar produtos</a>
</p>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card col-4" style="background-color: #d9d9d9; border: solid; border-color: #E9741F; width: 20%; margin-right: 10px; display: flex; flex-direction: column">
                <div style="width: 100%; height: 220px; margin-top: 5px"><img style="width: 100%; height: 100%" src='~/uploads/@item.Imagem'></div>
                
                <div style="text-align: center"><p class="lead m-0">@Html.DisplayFor(modelItem => item.Nome)</p></div>

                <div style="text-align: center"><h5>R$&nbsp;@Html.DisplayFor(modelItem => item.Preco)</h5></div>

                <div style="text-align: center"><h6>Categoria:&nbsp;@Html.DisplayFor(modelItem => item.Categoria.Nome)</h6></div>

                <div style="text-align: center"><h6>Fornecedor:&nbsp;@Html.DisplayFor(modelItem => item.Fornecedor.Nome)</h6></div>

                <div style="display: flex; flex-direction: row; justify-content: space-evenly; margin-top: 5px; margin-bottom: 5px;">
                    <a asp-action="Edit" asp-route-id="@item.ProdutoId">
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16" color="yellow">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                        </svg>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ProdutoId">
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16" color="red">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                        </svg>
                    </a>
                </div>
                <div style="text-align: center; margin-top: 10px; margin-bottom: 10px">
                    <a asp-controller="Compras" asp-action="Index" class="btn btn-light text-black" style="background-color: white; border: solid; border-color: #E9741F">Comprar</a>
                </div>
            </div>
        }
    </div>
</div>