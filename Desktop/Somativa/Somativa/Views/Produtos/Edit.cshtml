@model Somativa.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center my-5">
    <h1>Editar Produto</h1>
</div>

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estoque" class="control-label"></label>
                <input asp-for="Estoque" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId" style="border:solid; border-color:#E9741F"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label>
                <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId" style="border:solid; border-color:#E9741F"></select>
                <span asp-validation-for="FornecedorId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <input asp-for="Imagem" name="imgUp" type="file" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class=" col-2 me-5">
                    <input type="submit" value="Salvar" class="btn btn-lg btn-light" style="border:solid; border-color:#E9741F" />
                </div>
                <div class="ms-5 group-form col-2">
                    <a asp-action="Index" class="btn btn-lg btn-light" style="border:solid; border-color:#E9741F">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
