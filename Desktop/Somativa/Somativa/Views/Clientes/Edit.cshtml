@model Somativa.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}
<div class="text-center my-5">
    <h1>Editar Cliente</h1>
</div>

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nascimento" class="control-label"></label>
                <input asp-for="Nascimento" type="date" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class=" col-2 me-5">
                    <input type="submit" value="Salvar" class="btn btn-lg btn-light" style="border:solid; border-color:#E9741F" />
                </div>
                <div class="ms-5 group-form col-2">
                    <a asp-action="Index" class="btn btn-lg btn-light" style="border:solid; border-color:#E9741F">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}