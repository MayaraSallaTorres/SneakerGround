@model Somativa.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}
<div class="text-center my-5">
    <h1>Editar categoria</h1>
</div>

<br />
<div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <div class="form-group col-12">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class=" col-2 me-5">
                    <input type="submit" value="Salvar" class="btn btn-lg btn-light" style="border:solid; border-color:#E9741F" />
                </div>
                <div class="ms-5 group-form col-2">
                    <a asp-action="Index" class="btn btn-lg btn-light" style="border:solid; border-color:#E9741F">Voltar</a>
                </div>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
