@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center my-5">
    <h1>Adicionar Item</h1>
</div>

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendaItemId" />
            <div class="form-group">
                <label asp-for="VendaId" class="control-label"></label>
                <select asp-for="VendaId" class="form-control" asp-items="ViewBag.VendaId" style="border:solid; border-color:#E9741F"></select>
                <span asp-validation-for="VendaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId" style="border:solid; border-color:#E9741F"></select>
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unitario" class="control-label"></label>
                <input asp-for="Unitario" class="form-control" style="border:solid; border-color:#E9741F" />
                <span asp-validation-for="Unitario" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="col-2 me-5">
                    <input type="submit" value="Salvar" class="btn btn-lg btn-light" style="border:solid; border-color:#E9741F" />
                </div>
                <div class="ms-5 group-form col-2">
                    <a asp-action="Index" asp-route-id="@Model.VendaId" class="btn btn-lg btn-light" style="border:solid; border-color:#E9741F">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
